    private void Hover(int id)
    {
        for (int i = 0; i < id; i++)
        {
            starStyles[i] = "orange";
        }
    }

    private void UnHover(int id)
    {
        for (int i = 0; i < id; i++)
        {
            if (!starLock[i])
                starStyles[i] = "gray";
        }
    }

    private void Click(int id)
    {
        for (int i = 0; i < id; i++)
        {
            starLock[i] = true;
        }
        for (int i = id; i < 5; i++)
        {
            starLock[i] = false;
            starStyles[i] = "gray";
        }
        ReviewRating = id;
    }

    private void Close()
