                </NavLink>

                <NavLink href="/authentication">
                    <button class="registration-button">@AppState.UserName</button>
                </NavLink>
            </div>

        </div>

        <article>
            @Body
        </article>
    </main>
</div>


@code{

     //  Session
    #region Session

    public async void ClearSession()
    {
         await session.ClearAsync();
    }


    protected async override void OnInitialized()
    {
        AppState.OnChange += StateHasChanged;
        var name = await session.GetItemAsync<string>("UserName");
        AppState.UserName = name == null? "Login":name;
        var root = await session.GetItemAsync<bool>("UserRoot");
        AppState.UserRoot = root;
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }
    #endregion

   
}
